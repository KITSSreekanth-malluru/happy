<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>rest</display-name>
	<context-param>
		<param-name>atg.session.parentContextName</param-name>
		<param-value>/dyn</param-value>
	</context-param>
	<servlet>
		<servlet-name>getUserInfo</servlet-name>
		<servlet-class>com.castorama.webservices.rest.GetUserInfoServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>updateUserInfo</servlet-name>
		<servlet-class>com.castorama.webservices.rest.UpdateUserInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getUserInfo</servlet-name>
		<url-pattern>/getUserInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>updateUserInfo</servlet-name>
		<url-pattern>/updateUserInfo</url-pattern>
	</servlet-mapping>
</web-app>
